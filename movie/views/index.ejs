<%- include('components/header.ejs') %>
    <div class="container">
        <div class="row">
            <% movies.forEach(function (item){ %>
                <div class="col-md-2">
                    <div class="thumbnail">
                        <a href="/movie/<%= item._id %>">
                            <img src="" alt="<%= item.title %>">
                        </a>
                        <div class="caption">
                            <h3><%= item.title %></h3>
                            <p><a href="/movie/<%= item._id %>"  role="button" class="btn btn-primary">Watch Preview</a></p>   
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
<%- include('components/footer.ejs') %>